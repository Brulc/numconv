abeceda = str("ABCDEFGHIJKLMNOPQRSTUVWXYZ")
stevilka = input("Å tevilka:")
dolzina = len(stevilka) - 1
vsota = 0
p = "+"
k = "*"
eks = "^"
niz = str("Postopek: ")
sist = input("Kater sistem:")

for x in stevilka:
    try:
        x = int(x)
    except:
        crka = 9
        for y in abeceda:
            crka += 1
            if y == x:
                x = crka
                break
            
    part = x + k + sist + eks + dolzina
    niz = niz + part
    
    if dolzina != 0:
        niz = niz + p
        
    x = int(x)
    dolzina = int(dolzina)
    sist = int(sist)
    stevka = x*sist**dolzina
    vsota = vsota + stevka
    dolzina -= 1

print (vsota)
print (niz)
